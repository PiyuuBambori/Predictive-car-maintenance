<?xml version="1.0" encoding="utf-8"?>
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="bg-gray-100">
    <ActionBar title="Car Health Monitor" class="bg-blue-600 text-white">
        <NavigationButton visibility="collapsed" />
    </ActionBar>
    
    <GridLayout>
        <ScrollView>
            <StackLayout class="p-8">
                <Image src="~/images/car-logo.png" class="h-32 w-32 mb-8 self-center" />
                
                <Label text="Welcome Back" class="text-3xl font-bold text-center mb-2" />
                <Label text="Sign in to your account" class="text-gray-600 text-center mb-8" />
                
                <StackLayout class="mb-4">
                    <Label text="Email" class="text-gray-600 mb-1" />
                    <TextField 
                        text="{{ email }}" 
                        hint="Enter your email" 
                        keyboardType="email"
                        autocorrect="false"
                        autocapitalizationType="none"
                        class="bg-white p-4 rounded border-gray-300 border-width-1" />
                </StackLayout>
                
                <StackLayout class="mb-6">
                    <Label text="Password" class="text-gray-600 mb-1" />
                    <TextField 
                        text="{{ password }}" 
                        hint="Enter your password" 
                        secure="true"
                        returnKeyType="done"
                        class="bg-white p-4 rounded border-gray-300 border-width-1" />
                </StackLayout>
                
                <Button text="Sign In" 
                    tap="{{ onSignIn }}" 
                    isEnabled="{{ !isLoading }}"
                    class="bg-blue-600 text-white font-bold p-4 rounded-lg" />
                    
                <Button text="Forgot Password?" 
                    tap="{{ onForgotPassword }}" 
                    class="text-blue-600 bg-transparent mt-4" />
            </StackLayout>
        </ScrollView>
        <ActivityIndicator busy="{{ isLoading }}" class="activity-indicator"/>
    </GridLayout>
</Page>